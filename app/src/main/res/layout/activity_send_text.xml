<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/gradientblue"
    android:gravity="center"
    android:layout_gravity="center"
    android:id="@+id/relativeText">

    <Button
        android:id="@+id/sendBtn"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="77dp"
        android:text="Send Text"
        android:textColor="@color/white"
        android:background="@color/transparent"/>

    <EditText
        android:id="@+id/commandTxt"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColorLink="@color/gretwhite2"
        tools:text="asd"
        android:backgroundTint="@color/gretwhite2"
        android:textCursorDrawable="@color/gretwhite"
        android:gravity="center"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text Color"
        android:layout_below="@+id/commandTxt"
        android:layout_marginTop="15dp"
        android:id="@+id/textcolor"
        android:layout_centerHorizontal="true"
        android:textSize="15dp">

    </TextView>
    <View
        android:id="@+id/colorshowtext"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@color/black"
        android:layout_below="@+id/textcolor"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/colorshowtext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:id="@+id/picktextcolor"
        android:text="Select text color"
        android:textColor="@color/white"
        android:background="@color/transparent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Background Color"
        android:layout_below="@+id/picktextcolor"
        android:layout_marginTop="15dp"
        android:id="@+id/bcolor"
        android:layout_centerHorizontal="true"
        android:textSize="15dp">

    </TextView>
    <View
        android:id="@+id/colorshowbackground"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@color/white"
        android:layout_below="@+id/bcolor"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/colorshowbackground"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:id="@+id/pickbackcolor"
        android:text="Select background color"
        android:textColor="@color/white"
        android:background="@color/transparent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select text size"
        android:layout_below="@+id/pickbackcolor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:id="@+id/picksize"
        android:textSize="15dp"/>
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/picksize"
        android:layout_centerHorizontal="true"
        android:id="@+id/spinnersize"
        android:background="@color/gretwhite2"/>

</RelativeLayout>
